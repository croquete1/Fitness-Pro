{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "tsBuildInfoFile": ".tsbuild/app.tsbuildinfo",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": ".types/app"
  },
  "references": [
    { "path": "./tsconfig.lib.json" }
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.ts",
    "tests/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "src/lib/**"
  ]
}
