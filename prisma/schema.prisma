// -----------------------------------------------------
// prisma/schema.prisma — consistente e validado
// -----------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// -----------------------------------------------------
// Enums
// -----------------------------------------------------

// Perfis de utilizador (já usados no app)
enum Role {
  ADMIN
  TRAINER
  CLIENT
}

// Estado do utilizador (aprovado pelo admin, etc.)
enum Status {
  PENDING
  APPROVED
  REJECTED
  BLOCKED
}

// Estado das sessões/treinos
enum SessionStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
  COMPLETED
}

// -----------------------------------------------------
// Modelos
// -----------------------------------------------------

model User {
  id             String   @id @default(uuid()) @db.Uuid
  email          String   @unique @db.Citext
  name           String?
  passwordHash   String   @map("password_hash")
  role           Role     @default(CLIENT)
  status         Status   @default(PENDING)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relações (para componentes de Trainer/Admin)
  trainerSessions Session[] @relation("TrainerSessions")
  clientSessions  Session[] @relation("ClientSessions")

  @@map("users")
}

model Session {
  id          String        @id @default(uuid()) @db.Uuid
  trainerId   String        @map("trainer_id") @db.Uuid
  clientId    String        @map("client_id")  @db.Uuid
  scheduledAt DateTime      @map("scheduled_at")
  status      SessionStatus @default(PENDING)
  notes       String?
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  trainer User @relation("TrainerSessions", fields: [trainerId], references: [id])
  client  User @relation("ClientSessions", fields: [clientId], references: [id])

  @@index([trainerId])
  @@index([clientId])
  @@index([scheduledAt])
  @@map("sessions")
}
